<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="WatchView">
        <!--表盘的边距-->
        <attr name="wv_padding" format="dimension"/>
        <!--表盘文字大小-->
        <attr name="wv_textsize" format="dimension"/>
        <!--时针的宽度-->
        <attr name="wv_hour_width" format="dimension"/>
        <!--分针的宽度-->
        <attr name="wv_minute_width" format="dimension"/>
        <!--秒针的宽度-->
        <attr name="wv_second_width" format="dimension"/>
        <!--指针圆角值-->
        <attr name="wv_pointer_corner_radius" format="dimension"/>
        <!--指针超过中心点的长度-->
        <attr name="wv_pointer_end_length" format="dimension"/>
        <!--时刻刻度颜色-->
        <attr name="wv_scale_long_color" format="color"/>
        <!--非时刻刻度颜色-->
        <attr name="wv_scale_short_color" format="color"/>
        <!--时针颜色-->
        <attr name="wv_hour_pointer_color" format="color"/>
        <!--分针颜色-->
        <attr name="wv_minute_pointer_color" format="color"/>
        <!--秒针颜色-->
        <attr name="wv_second_pointer_color" format="color"/>
    </declare-styleable>
</resources>