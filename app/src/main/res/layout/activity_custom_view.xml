<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_360scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="仿360滑动效果" />

        <Button
            android:id="@+id/btn_xfremode_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XFREMODE测试" />

        <Button
             android:id="@+id/btn_customview_day_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="CUSTOMVIEWDAYONE" />
        <Button
            android:id="@+id/btn_canvas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="CANVAS操作" />
        <Button
            android:id="@+id/btn_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="PATH" />
        <Button
            android:id="@+id/btn_bezier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Bezier贝赛尔曲线" />

    </LinearLayout>
</ScrollView>
