<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_behavior1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试01" />

        <Button
            android:id="@+id/btn_behavior2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="ToolBar自定义布局" />

        <Button
            android:id="@+id/btn_behavior3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="CollapsingToolbarTest" />

        <Button
            android:id="@+id/btn_behavior4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="测试04" />

        <Button
            android:id="@+id/btn_behavior5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="测试05" />

        <Button
            android:id="@+id/btn_behavior6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="测试06" />
    </LinearLayout>
</ScrollView>
